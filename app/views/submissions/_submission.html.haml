
- cache object do
  %td.table-text= object.site_name
  %td.table-text
    -# TODO: refactor this with presenter
    = image_tag(url_for(object.image))
  
  %td.table-text= object.reliable
  %td.table-text= object.type_name
  %td.table-text= object.type.legible_type_data if object.type
  %td.table-text= object.record_taken.to_date.strftime "%d/%m/%y" if object.record_taken
  %td.table-text= object.created_at.strftime "%d/%m/%y"

  -# if object.weather_info
    %td.table-text= object.weather_info["data"][0]["summary"]
  - if admin?
    %td.actions= smart_listing_item_actions [{name: :show, url: submission_path(object)}, {name: :edit, url: edit_submission_path(object)}, {name: :destroy, url: submission_path(object), confirmation: "Are you sure you want to delete this submission?"}]
  - else
    %td.actions= smart_listing_item_actions [{name: :show, url: submission_path(object)}]
