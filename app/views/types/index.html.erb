<p id="notice"><%= notice %></p>

<h1>Types</h1>

<table>
  <thead>
    <tr>
      <th colspan="1">Data</th>
      <th colspan="1">Comment</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @types.each do |type| %>
      <tr>
        <% data = type.data.map {|a,b| "#{a}: #{b}" if b.present?} %>
        <td><%=data.compact[0] %></td>
        <td><%=type.comment %></td>

        <td><%= link_to 'Show', type %></td>
        <td><%= link_to 'Edit', edit_type_path(type) %></td>
        <td><%= link_to 'Destroy', type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

